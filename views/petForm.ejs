<!DOCTYPE html>
<html>
  <head>
    <link rel="stylesheet" type="text/css" href="/static/css/globals.css">
    <link rel="stylesheet" type="text/css" href="/static/css/nav.css">
    <link rel="stylesheet" type="text/css" href="/static/css/petForm.css">
  </head>
  <body>
    <%- include('navbar') -%>
    <form method="post">
      <div class="container">
        <h1 class="title">
          <% if (typeof pet === 'undefined') { %>
            Add your new pet!
          <% }else{ %>
            Update <%= pet?.name %>'s details!
          <% } %>
        </h1>
        <div class="descriptionContainer">
          <div class="headline">
            <input
              name="ownerId"
              hidden
              type="text"
              <% if (locals.pet) { %>
                value="<%= pet?.ownerId %>"
              <% } %>
            ></input>
            <input
              name="id"
              hidden
              type="text"
              <% if (locals.pet) { %>
                value="<%= pet?._id %>"
              <% } %>
            ></input>
            <input
              name="name"
              type="text"
              <% if (locals.pet) { %>
                value="<%= pet?.name %>"
              <% } %>
            ></input>
            <p>, who is a</p>
            <input
              name="age"
              type="number"
              min="0"
              <% if (locals.pet) { %>
                value="<%= pet?.age %>"
              <% } %>
            />
            <p>year(s) old</p>
            <input
              name="specie"
              type="text"
              <% if (locals.pet) { %>
                value="<%= pet?.specie %>"
              <% } %>
            />
          </div>
          <textarea
            name="description"
            class="description"><% if (locals.pet) { %><%= pet?.description %><% } %></textarea>
          <div class="buttonContainer">
            <a class="formButton cancelButton" href="/pets">Cancel</a>
            <button type="submit" class="cleanButton formButton saveButton">Save</button>
          </div>
        </div>
      </div>
    </form>
  </body>
</html>